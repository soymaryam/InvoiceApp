@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<div class="container">
    <div class="d-flex flex-column justify-content-center align-items-center text-center" style="min-height: 70vh;">
        <h1 class="display-5 text-dark mb-2">Invoice Manager</h1>
        <p class="lead mb-3">Simplify your invoicing process. Create, manage, and track your invoices with ease.</p>
        <a href="/Invoices" class="btn btn-primary btn-md">View Invoices</a>
    </div>

    <div class="row text-center mt-4">
        <div class="col-md-4 mb-3">
            <h6>🧾 Create Invoices</h6>
            <p class="small">Generate professional invoices in seconds.</p>
        </div>
        <div class="col-md-4 mb-3">
            <h6>📊 Track Payments</h6>
            <p class="small">Monitor paid and pending invoices easily.</p>
        </div>
        <div class="col-md-4 mb-3">
            <h6>📂 Manage Records</h6>
            <p class="small">Easily add, edit, and delete invoice records.</p>
        </div>
    </div>
</div>
