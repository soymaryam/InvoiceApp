@page
@model InvoiceApp.Pages.Invoices.IndexModel
@{
}
<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<h2 class="text-center mb-3">Invoices</h2>
<a class="btn btn-primary" asp-page="/Invoices/Create">New Invoice</a>

<table id="invoiceTable" class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Invoice No</th>
            <th>Status</th>
            <th>Client</th>
            <th>Total Price</th>
            <th>IssueDate</th>
            <th>Due Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach(var invoice in Model.invoiceList)
        {
            <tr>
                <td>@invoice.Id</td>
                <td>@invoice.Number</td>
                <td>
                    @if (invoice.Status == "Paid")
                    {
                        <span class="badge bg-success text-light">Paid</span>
                    }
                    else if (invoice.Status == "Pending")
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@invoice.Status</span>
                    }
                </td>
                <td>@invoice.ClientName</td>
                <td>@(invoice.Quantity * invoice.UnitPrice)$</td>
                <td>@invoice.IssueDate</td>
                <td>@invoice.DueDate</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-page="/Invoices/Edit" asp-route-id="@invoice.Id" title="Edit">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a class="btn btn-danger btn-sm" asp-page="/Invoices/Delete" asp-route-id="@invoice.Id" title="Delete">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#invoiceTable').DataTable();
        });
    </script>
}
